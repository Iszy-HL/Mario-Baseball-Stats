total_average = sum(total_hits)/sum(total_at_bats)
) %>%
mutate(
gameday = row_number(),
cum_at_bats = cumsum(total_at_bats),
cum_hits = cumsum(total_hits),
running_avg = cum_hits / cum_at_bats
)
